<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Acción para abrir las vistas de mazos -->
    <record id="action_game_deck" model="ir.actions.act_window">
        <field name="name">Game Decks</field>
        <field name="res_model">game.deck</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Vista de árbol (list) -->
    <record id="view_game_deck_list" model="ir.ui.view">
        <field name="name">game.deck.list</field>
        <field name="model">game.deck</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="user_id" string="Player"/>
                <field name="class_id" string="Class"/>
                <field name="total_mana" string="Total Mana"/>
            </list>
        </field>
    </record>

    <!-- Vista de formulario -->
    <record id="view_game_deck_form" model="ir.ui.view">
        <field name="name">game.deck.form</field>
        <field name="model">game.deck</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group string="Deck Info" style="padding: 10px; border: 1px solid #ddd; border-radius: 10px;">
                        <field name="name"/>
                        <field name="user_id"/>
                        <field name="class_id"/>
                    </group>
                    <group string="Cards in Deck" style="margin-top: 20px;">
                        <field name="cards" widget="many2many_tags">
                            <list>
                                <field name="name"/>
                                <field name="mana_class"/>
                                <field name="mana_colorless"/>
                            </list>
                        </field>
                    </group>
                    <group string="Statistics" style="margin-top: 20px; padding: 10px; border: 1px solid #ddd; border-radius: 10px;">
                        <field name="total_mana"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
